{% extends 'base.html.twig' %}

{% block title %} Votre panier {% endblock %}

{% block stylesheets %}

<link rel="stylesheet" href="{{ asset("assets/css/panier.css") }}">

{% endblock %}

{% block body %}


<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Vos articles</th>
            <th scope="col">Nom</th>
            <th scope="col">Prix</th>
        </tr>
    </thead>
    <tbody>
{% for article in thisCart %}
        <tr>
            <td>
                <div class="images">
                    <img src="{{ article.image }}" alt="" class="img"  style="height: 50%; width: 50%;">
                </div>
            </td>
            <td>
                <div class="nom">
                    <p>{{ article.title }}</p>
                </div>
            </td>
            <td>
                <div>
                    <h1>{{ article.prix }} euro</h1>
                </div>            
            </td>
            <td>
                <div>
                 
                </div>
            </td>
            <td>
                <div>
                   
                </div>
            </td>


{% endfor %}
    </tbody>
</table>
{% if thisCart is empty %}
<h1>panier vide</h1>
{% else %}
<a href="{{ path('commander') }}"><button class="btn btn-primary" type="submit">Commander</button></a>
{% endif %}

{% endblock %}
